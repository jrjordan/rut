/glg4scint/setQF 1.0

/generator/add combo gun:point
#/generator/vtx/set e+ 0 0 -1 50.0
/generator/vtx/set opticalphoton 0 0 -1 .0000031
/generator/pos/set 0 0 990

/run/beamOn 10
